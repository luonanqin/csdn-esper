<?xml version="1.0" encoding="UTF-8"?><esper-configuration xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"                     xmlns="http://www.espertech.com/schema/esper"                     xsi:noNamespaceSchemaLocation="esper-configuration-4-0.xsd">>    <event-type name="timer" class="example.model.Timer"/>    <auto-import import-name="java.lang.Double"/>    <auto-import import-name="java.math.*"/>    <!-- Sample configuration for database access using DriverManager; retains connections associated with a statement, closing the connection when a statement is stopped -->    <database-reference name="test">        <drivermanager-connection class-name="com.mysql.jdbc.Driver" url="jdbc:mysql://127.0.0.1:3306/test" user="luonq" password="123456">            <connection-arg name="user" value="luonq"/>            <connection-arg name="password" value="123456"/>        </drivermanager-connection>        <connection-lifecycle value="retain"/>        <!-- Retains connection associated with a statement, closing a connection only when a statement is stopped -->        <expiry-time-cache max-age-seconds="60" purge-interval-seconds="120" ref-type="weak"/>        <!-- Configures an optional time-based cache with a maximum age in seconds and a purge interval, and an optional reference strategy  -->        <column-change-case value="lowercase"/>    </database-reference></esper-configuration>